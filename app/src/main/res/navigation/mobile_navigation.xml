<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.moco_project_fibuflat.ActivityGroup.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_addEntryFragment"
            app:destination="@id/addEntryFragment" />
        <action
            android:id="@+id/action_nav_home_to_moneyPoolChangeEntry"
            app:destination="@id/moneyPoolChangeEntry" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.moco_project_fibuflat.ActivityGroup.ui.ToDo.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.moco_project_fibuflat.ActivityGroup.ui.NFC.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/addEntryFragment"
        android:name="com.example.moco_project_fibuflat.ActivityGroup.ui.home.AddEntry.AddEntryFragment"
        android:label="fragment_add_entry"
        tools:layout="@layout/fragment_add_entry" >
        <action
            android:id="@+id/action_addEntryFragment_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>
    <fragment
        android:id="@+id/moneyPoolChangeEntry"
        android:name="com.example.moco_project_fibuflat.ActivityGroup.ui.home.AddEntry.MoneyPoolChangeEntry"
        android:label="fragment_money_pool_change_entry"
        tools:layout="@layout/fragment_money_pool_change_entry" >
        <action
            android:id="@+id/action_moneyPoolChangeEntry_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>
</navigation>